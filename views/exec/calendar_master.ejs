                        </div>
                        <div class="input-field">
                            <input id="edit-brother2-lastname" class="autocomplete" type="text">
                            <label for="edit-brother2-lastname">Last Name</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="modal-buttons">
                <button class="modal-close waves-effect waves-close btn close">Close</button>
                <button class="modal-close waves-effect waves-edit btn edit">Submit</button>
            </div>
        </div>
    </div>


    <!-- Modal Structure -->

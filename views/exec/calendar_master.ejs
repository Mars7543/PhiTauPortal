    <!-- Modal Structure -->
    <div id="edit-duty" class="modal">
        <div class="modal-content">
            <h1 class="title">Edit Duty</h1>
            <div class="edit-container">
                <div class="brother-one">
                    <h2>Brother 1</h2>
                    <div class="form-field">
                        <div class="input-field">
                            <input id="edit-brother1-firstname" class="autocomplete" name="firstname" type="text">
                            <label for="edit-brother1-firstname">First Name</label>
                        </div>
                        <div class="input-field">
                            <input id="edit-brother1-lastname" class="autocomplete" name="lastname" type="text">

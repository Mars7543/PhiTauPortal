                <div class="duties-actions">
                    <button id="unassign-duties" class="btn btn-large waves-effect waves-light">Unassign Duties</button>
                    <button id="assign-duties" class="btn btn-large waves-effect waves-light">Assign Duties</button>
                </div>
            </div>
        </div>

        <div class="duties-view">
            <div class="header">
                <h1>Duties View</h1>
